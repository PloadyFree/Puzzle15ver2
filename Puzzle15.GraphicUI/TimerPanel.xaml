<UserControl x:Class="Puzzle15.GraphicUI.TimerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding RelativeSource={RelativeSource self}}"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Border BorderThickness="5" BorderBrush="{StaticResource TimerBorder}">
		<Grid Background="{StaticResource TimerBackground}">
			<TextBlock x:Name="Timer"
                       Margin="20, 0, 20, 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="25"
                       Foreground="{StaticResource TimerForeground}"
                       Text="{Binding Path=Time}" />
		</Grid>
	</Border>
</UserControl>